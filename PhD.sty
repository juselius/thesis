\def\maketitle{\begin{titlepage}%
%\point{-4.0}{-23.0}{\includegraphics[scale=13]{MLBG.eps}}
\let\footnotesize\small
\let\footnoterule\relax
\setcounter{page}{1}%
\null
\vskip 3.0 in
\noindent
{\huge\sf \@title}
\vskip 0.2cm
\noindent
\rule{\textwidth}{0.5mm}\\
\mbox{} \hfill \begin{tabular}[t]{r} {\large\bf\sf\@subtitle}\\
\end{tabular}\vspace{5.0cm} 
\begin{center}
{\Large\bf\@author} \\[2mm]
\@address \\
\end{center}
%\@years

%\vspace{5cm}\noindent
\vfill\noindent
{\it \@abstract}
\end{titlepage}%
\setcounter{footnote}{0}%
\gdef\@author{}\gdef\@title{}\gdef\@years{}\gdef\@abstract{}
\let\maketitle\relax}

